<list-view
        class="list_container"
        enableRefresher="{{true}}"
        refreshState="{{refreshState}}"
        loadingState="{{loadingState}}"
        enableLoadMore="{{hasNextPage}}"
        bind:onRefresh="onRefresh"
        bind:onLoadMore="onLoadMore">
    <view>
        <view class="shop_info_container" catch:tap="toGoodsListPage">
            <lazy-load-image class="shop_logo" mode="aspectFill" src="{{shopInfo.shopImgUrl}}"
                             defaultSrc="/assets/default_img.png"/>
            <view class="shop_name_block">
                <ellip-text class="shop_name">{{shopInfo.shopName;}}</ellip-text>
            </view>
            <view class="shop_notice_block">
                <ellip-text class="shop_notice" maxLine="5">{{shopInfo.shopNotice ? shopInfo.shopNotice : '暂无公告';}}
                </ellip-text>
            </view>
        </view>

        <divider
                my-class="load-end-class"
                line-class="load-end-line-class"
                height="60rpx"
                lineHeight="2"
                size=""
                color=""
                content="商品分类"/>

        <block wx:for="{{subShopList}}" wx:key="index">
            <shop-card my-class="shop_card_container"
                       click-class="shop_card_item_click"
                       shopInfo="{{item}}"
                       data-shop-info="{{item}}"
                       bind:tap="onShopCardClick"/>
        </block>
    </view>
    <load-more slot="list-bottom" wx:if="{{hasNextPage||isLoadEnd}}" loadingState="{{hasNextPage}}"
               loadEndState="{{isLoadEnd}}"></load-more>
</list-view>
